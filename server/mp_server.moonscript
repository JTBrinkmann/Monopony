lapis = require "lapis"

class extends lapis.Application
	"/": =>
		@html ->
			h2 "Welcome!"
			text "Go to my "
			a href: profile_url, "profile"

	-- Define a named route pattern with a variable called name
	[profile: "/:name"]: =>
		@html ->
			div class: "profile", ->
				text "Welcome to the profile of ", @params.name